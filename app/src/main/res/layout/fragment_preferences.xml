<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PreferencesFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="154dp"
            android:layout_height="41dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="128dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="129dp"
            android:layout_marginBottom="511dp"
            android:text="Preferences"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="318dp"
            android:layout_height="133dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="42dp"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="51dp"
            android:layout_marginBottom="350dp"
            android:text="Here you will be able to see and save your preferences for this app. As for now there is only one preference to save and that is how long you would like this app to save your information for. Please enter this information in the number of days."
            android:textSize="16sp" />

        <EditText
            android:id="@+id/numberId"
            android:layout_width="140dp"
            android:layout_height="61dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="242dp"
            android:layout_marginTop="314dp"
            android:layout_marginEnd="29dp"
            android:layout_marginBottom="228dp"
            android:ems="10"
            android:hint="Num. of days"
            android:inputType="number"
            android:maxLength="2" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="191dp"
            android:layout_height="99dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="39dp"
            android:layout_marginTop="301dp"
            android:layout_marginEnd="181dp"
            android:layout_marginBottom="202dp"
            android:text="How many days would you like this app to save your recipes for after you delete them?"
            android:textSize="16sp" />

        <Button
            android:id="@+id/preferenceCancelBtnId"
            android:layout_width="117dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="59dp"
            android:layout_marginTop="466dp"
            android:layout_marginEnd="235dp"
            android:layout_marginBottom="87dp"
            android:text="Cancel" />

        <Button
            android:id="@+id/preferenceSaveBtnId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="203dp"
            android:layout_marginTop="460dp"
            android:layout_marginEnd="59dp"
            android:layout_marginBottom="87dp"
            android:text="Save Changes" />

    </RelativeLayout>

</FrameLayout>